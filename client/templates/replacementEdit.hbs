<div class="row">
	<div class="col-md-12">
		<legend>Vertretung bearbeiten</legend>

		{{#with model}}

			<form role="form" >
				<div class="form-group">
					<label for="formDate">Datum</label>
					<input name="date" type="date" class="form-control" id="formDate" placeholder="DD.MM.JJJJ">
				</div>
				<div class="form-group">
					<label for="formlesson">Stunde</label>
					<select name="lesson" class="form-control" id="formlesson">
						{{#each ../lessons}}
							<option value="{{id}}">{{no}}: {{format_start}} - {{format_end}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="formTeacher">Lehrer</label>
					<select name="teacher" class="form-control" id="formTeacher">
						{{#each ../teachers}}
							<option value="{{id}}">{{firstname}} {{name}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="formRoom">Raum</label>
					<select name="room" class="form-control" id="formRoom">
						{{#each ../rooms}}
							<option value="{{id}}">{{description}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="formSubject">Fach</label>
					<select name="subject" class="form-control" id="formSubject">
						{{#each ../subjects}}
							<option value="{{id}}">{{description}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="formForm">Klasse</label>
					<select name="form" class="form-control" id="formForm">
						{{#each ../classes}}
							<option value="{{id}}">{{description}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="formNote">Notiz</label>
					<textarea name="note" id="formNote" class="form-control" rows="3"></textarea>
				</div>
			
				<button type="button" class="btn btn-primary app-save">Speichern</button>
			</form>

		{{/with}}
	</div>
</div>
