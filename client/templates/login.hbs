<div class="row">
	<div class="col-lg-4 col-offset-4">
		<form>
			<fieldset>
				<legend>Login</legend>

				<div class="form-group">
					<label for="username">User</label>
					<input type="text" class="app-username form-control" id="username" placeholder="User">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="app-password form-control" id="password" placeholder="Passwort">
				</div>

				<div class="alert alert-danger app-alert" style="display: none;"></div>

				<button type="button" class="btn btn-primary pull-right app-login">Login</button>
			</fieldset>
		</form>
	</div>
</div>
