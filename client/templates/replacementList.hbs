<div class="row">
	<div class="col-md-12">
		{{#each collection}}

			<legend>{{@key}}</legend>

			<div class="list-group">
				{{#each this}}
					<a href="#replacement/{{id}}" class="list-group-item">
						<h4 class="list-group-item-heading">
							{{form.description}},
							{{#if lesson}}
								<span class="text-muted">{{lesson.format_start}} - {{lesson.format_end}}</span>
							{{else}}
								<span class="text-muted">keine Stunde</span>
							{{/if}},
							{{#if subject}}
								{{subject.description}}
							{{else}}
								<span class="text-muted">kein Fach</span>
							{{/if}}
						</h4>
						<p class="list-group-item-text">
							mit {{teacher.firstname}} {{teacher.name}}, {{room.description}}<br>
						</p>

						{{#if note}}
							<br>
							<p class="text-warning"><b>Hinweis:</b> {{note}}</p>
						{{/if}}
					</a>
				{{/each}}
			</div>
		{{/each}}
	</div>
</div>
